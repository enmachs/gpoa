= simple_form_for [:admin, @operative_plan] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_operative_plans_path, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t("keppler.modules.#{action_name.underscore}")
            .box-tools.pull-right
              %a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :responsible_actor, label: 'Actor Responsable', input_html: {class: "materialize-textarea"}
                  .col-xs-12
                    = f.input :national_plan, label: 'Plan Nacional', input_html: {class: "materialize-textarea"}
                  .col-xs-12
                    = f.input :state_plan, label: 'Plan Estatal', input_html: {class: "materialize-textarea"}
                  .col-xs-6
                    = f.input :district, label: 'Sector'
                  .col-xs-6
                    = f.input :project, label: 'Proyecto'
                  .col-xs-6
                    = f.input :program, label: 'Programa'
                  .col-xs-6
                    = f.input :subprogram, label: 'Subprograma'
                  .col-xs-12
                    = f.input :objective, label: 'Objetivo', input_html: {class: "materialize-textarea"}

                  .col-xs-12
                    .pull-right
                      = f.button :submit, t("keppler.actions.save"), name: '_save', class: "btn-primary"
                      = f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
